<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall9">

        <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="-2sp"
    	android:layout_marginRight="15sp"
        android:src="@drawable/headerdark"
        android:layout_alignTop="@+id/TourListLayout"
        android:scaleType="fitXY" />
        
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TourListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="27sp"
        android:layout_gravity="center|right"
        android:background="@android:color/darker_gray"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/priceTitle"
            android:layout_width="0sp"
            android:layout_height="25sp"
            android:layout_gravity="right|top"
            android:layout_marginRight="5sp"
            android:layout_weight="1.5"
            android:gravity="right|top"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tourTitle"
            android:layout_width="0sp"
            android:layout_height="25sp"
            android:layout_gravity="right|top"
            android:layout_marginRight="5sp"
            android:layout_weight="2"
            android:gravity="right|top"
            android:textSize="18sp" />
        <ImageView
	    android:id="@+id/AgencyImage"
	    android:layout_width="70sp"
	    android:layout_height="70sp"
	    android:gravity="center"
	    android:layout_marginRight="10sp"
	    android:layout_gravity="right"
	    android:layout_weight="0"
	    android:visibility="gone"/>
    </LinearLayout>

	<LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >
    
    	<ListView
        android:id="@+id/TourList"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
 		>

    	</ListView>
    	
    	<ImageView
        android:id="@+id/imageViewAdvertise"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:src="@drawable/bg_striped_split_img"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_weight="0" 
        android:onClick="onClick"/>

	</LinearLayout>

</RelativeLayout>

        <ImageView
            android:id="@+id/imageViewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TourListLayout"
            android:layout_marginLeft="15sp"
        	android:layout_marginBottom="-2sp"
    		android:layout_marginRight="15sp"
            android:scaleType="fitXY"
            android:src="@drawable/footer" />

</RelativeLayout>