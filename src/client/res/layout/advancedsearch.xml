<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall9">

        <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="-2sp"
    	android:layout_marginRight="15sp"
        android:src="@drawable/header"
        android:layout_alignTop="@+id/AdSearchLayout"
        android:scaleType="fitXY" />

<LinearLayout
    android:id="@+id/AdSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp">
    
    <ScrollView
    android:id="@+id/scrollView20"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

         <TableRow
        android:id="@+id/tableRow20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="1sp" >

            <EditText
			android:id="@+id/txtSourceValue"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="5sp"
			android:layout_weight="1"
			>
			<requestFocus />
            </EditText>
            

           <TextView
			android:id="@+id/txtSourceTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="1sp">

            <EditText
			android:id="@+id/txtDestinationValue"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="5sp"
			android:layout_weight="1"
			/>

           <TextView
			android:id="@+id/txtDestinationTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
       
        <TableRow
        android:id="@+id/tableRow22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="1sp">

            <EditText
			android:id="@+id/txtHotelValue"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="5sp"
			android:layout_weight="1"
			/>

           <TextView
			android:id="@+id/txtHotelTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_margin="1sp" >
            
            <EditText
			android:id="@+id/txtFromDateValue0"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="1"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			android:visibility="invisible"
			/>
            
            <EditText
			android:id="@+id/txtFromDateValueYear"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="100"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			/>
            <TextView
                android:gravity="center|right"
                android:text="/" />

            <EditText
			android:id="@+id/txtFromDateValueMonth"
			android:layout_width="50sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center"
			android:layout_weight="0.5"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="2"
			/>
            <TextView    
                android:text="/"        
                android:gravity="center"/>
            <EditText
			android:id="@+id/txtFromDateValueDay"
			android:layout_width="50sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center"
			android:layout_marginRight="5sp"
			android:layout_weight="0.5"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="2"
			/>

           <TextView
			android:id="@+id/txtFromDateTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_margin="1sp" >

            
            <EditText
			android:id="@+id/txtToDateValue0"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="1"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			android:visibility="invisible"
			/>
            
            <EditText
			android:id="@+id/txtToDateValueYear"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="100"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			/>
            <TextView
                android:gravity="center|right"
                android:text="/" />

            <EditText
			android:id="@+id/txtToDateValueMonth"
			android:layout_width="50sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center"
			android:layout_weight="0.5"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="2"
			/>
            <TextView    
                android:text="/"        
                android:gravity="center"/>
            <EditText
			android:id="@+id/txtToDateValueDay"
			android:layout_width="50sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center"
			android:layout_marginRight="5sp"
			android:layout_weight="0.5"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="2"
			/>

           <TextView
			android:id="@+id/txtToDateTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="1sp" >

            
            <EditText
			android:id="@+id/txtStartPriceFromRial0"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="1"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			android:visibility="invisible"
			/>
            
            <TextView
			android:id="@+id/txtStartPriceFromRial"
			android:layout_width="25sp"
			android:layout_height="wrap_content"
			android:textSize="19sp"
			android:gravity="left|center"
			android:layout_gravity="right|center"
			android:layout_marginLeft="10sp"
			android:layout_weight="0"
			android:text="ریال"
		    />
            
            <EditText
			android:id="@+id/txtStartPriceFromValue"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="5sp"
			android:layout_weight="100"
			android:inputType="numberSigned"
			android:digits="0123456789,"
			/>

           <TextView
			android:id="@+id/txtStartPriceFromTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="1sp" >

            <EditText
			android:id="@+id/txtStartPriceToRial0"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center|right"
			android:layout_weight="1"
			android:inputType="numberSigned"
			android:digits="0123456789"
			android:maxLength="4"
			android:visibility="invisible"
			/>
            
            <TextView
			android:id="@+id/txtStartPriceToRial"
			android:layout_width="25sp"
			android:layout_height="wrap_content"
			android:textSize="19sp"
			android:gravity="left|center"
			android:layout_gravity="right|center"
			android:layout_marginLeft="10sp"
			android:layout_weight="0"
			android:text="ریال"
		    />
            
            <EditText
			android:id="@+id/txtStartPriceToValue"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="5sp"
			android:layout_weight="100"
			android:inputType="numberSigned"
			android:digits="0123456789,"
			/>

           <TextView
			android:id="@+id/txtStartPriceToTitle"
			android:layout_width="58sp"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="right|center"
			android:layout_gravity="right|center"
			android:layout_marginRight="10sp"
			android:layout_weight="0"
		    />
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:layout_gravity="center">

		<View 
		    android:layout_height="20sp" />
		
        </TableRow>   
        
        <TableRow
        android:id="@+id/tableRow28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:layout_gravity="center">

         <Button
			android:id="@+id/BtnAdvSearch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:gravity="center"
			android:layout_gravity="center"
			android:onClick="onClick"
			android:background="@drawable/btn_model"
			/>
		
        </TableRow>
        
        <TableRow
        android:id="@+id/tableRow29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:layout_gravity="center">

		<View 
		    android:layout_height="30sp" />
		
        </TableRow>
        
    </TableLayout>
</ScrollView>

</LinearLayout>


        <ImageView
            android:id="@+id/imageViewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/AdSearchLayout"
            android:layout_marginLeft="15sp"
        	android:layout_marginBottom="-2sp"
    		android:layout_marginRight="15sp"
            android:scaleType="fitXY"
            android:src="@drawable/footer" />

</RelativeLayout>